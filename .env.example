# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/minky_db

# Flask Environment - NEVER use 'development' or DEBUG=True in production
FLASK_ENV=production
FLASK_DEBUG=False

# Security - Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# CRITICAL: Change these values before deployment!
SECRET_KEY=CHANGE_ME_generate_secure_random_key_at_least_64_chars
JWT_SECRET_KEY=CHANGE_ME_generate_another_secure_random_key

# Optional: System user password (generated automatically if not set)
# SYSTEM_USER_PASSWORD=

# API Key Encryption - Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# CRITICAL: Set this to encrypt API keys stored in the database
AI_CONFIG_ENCRYPTION_KEY=

# CORS Configuration
CORS_ORIGINS=https://your-domain.com

# Rate Limiting
RATE_LIMIT_DEFAULT=1000 per hour

# Redis (for production caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=RedisCache

# OpenSearch (optional)
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=CHANGE_ME
OPENSEARCH_USE_SSL=true
